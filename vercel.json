{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "redirects": [
        {
            "source": "/:path*",
            "has": [
                {
                    "type": "host",
                    "value": "www.yamaori.jp"
                }
            ],
            "destination": "https://yamaori.jp/:path*",
            "permanent": true
        },
        {
            "source": "/",
            "has": [
                {
                    "type": "host",
                    "value": "www.yamaori.jp"
                }
            ],
            "destination": "https://yamaori.jp/",
            "permanent": true
        },
        {
            "source": "/:path*",
            "has": [
                {
                    "type": "scheme",
                    "value": "http"
                }
            ],
            "destination": "https://yamaori.jp/:path*",
            "permanent": true
        },
        {
            "source": "/",
            "has": [
                {
                    "type": "scheme",
                    "value": "http"
                }
            ],
            "destination": "https://yamaori.jp/",
            "permanent": true
        }
    ]
}